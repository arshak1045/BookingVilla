@model IEnumerable<BookingVilla.Domain.Entities.Villa>

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-dark bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white-50 py-2">Villas</h1>
			</div>
		</div>
		<div class="card-body border p-4">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th class="card-header bg-light text-black">Name</th>
						<th class="card-header bg-light text-black">Price</th>
						<th class="card-header bg-light text-black">Square Feet</th>
						<th class="card-header bg-light text-black">Occupancy</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var villa in Model)
					{
						<tr>
							<td class="card-body bg-light text-black"> <i class="bi bi-house"></i> @villa.Name</td>
							<td class="card-body bg-light text-black"> <i class="bi bi-cash"></i> @villa.Price</td>
							<td class="card-body bg-light text-black"> <i class="bi bi-2-square"></i> @villa.Sqft</td>
							<td class="card-body bg-light text-black"> <i class="bi bi-people-fill"></i> @villa.Occupancy</td>
							<td>
								<div class="w-100 btn-group" role="group">
									<a asp-controller="Villa" asp-action="" class="btn btn-warning"> <i class="bi bi-pen-fill"></i>Edit</a>
									<a asp-controller="Villa" asp-action="" class="btn btn-warning"><i class="bi bi-trash-fill"></i> Delete</a>
								</div>
								
							</td>
						</tr>
					}
				</tbody>
			</table>
			<div class="row pb-3">
				<div class="col-6 offset-6 text-end">
					<a asp-controller="Villa" asp-action="Create" class="btn btn-success">
						<i class="bi bi-plus-circle-dotted"></i> Create New Villa
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

