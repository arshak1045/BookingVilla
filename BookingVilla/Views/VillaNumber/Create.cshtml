@model BookingVilla.ViewModels.VillaNumberVM

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-dark bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white-50 py-2">Create Villa Number</h1>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<div class="p-3">
				<div asp-validation-summary="ModelOnly" class="text-info"></div>
				<div class="form-floating py-1 col-12">
					<select asp-for="@Model.VillaNumber.VillaId" asp-items="@Model.VillaList"
						class="form-select border shadow">
					<option disabled selected>- Select Villa - </option>	
					</select>
					<label asp-for="VillaNumber.VillaId" class="ms-2"></label>
					<span asp-validation-for="VillaNumber.VillaId" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="VillaNumber.Villa_Number" class="form-control border shadow" />
					<label asp-for="VillaNumber.Villa_Number" class="ms-2"></label>
					<span asp-validation-for="VillaNumber.Villa_Number" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="VillaNumber.Details" class="form-control border shadow" />
					<label asp-for="VillaNumber.Details" class="ms-2"></label>
					<span asp-validation-for="VillaNumber.Details" class="text-danger"></span>
				</div>
			</div>
			<div class="row pt-2">
				<div class="col-6 col-md-5">
					<button type="submit" class="btn btn-success w-100 justify-content-center d-flex">
						<i class="bi bi-plus-circle-dotted"></i> Create
					</button>
				</div>
				<div class="col-6 col-md-5">
					<a asp-controller="VillaNumber" asp-action="Index" class="btn btn-secondary w-100 justify-content-center d-flex">
						<i class="bi bi-x-circle"></i> Cancel
					</a>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
